BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        size_hint_y: None
        height: 40

        Button:
            text: 'Up'
            on_press: app.handle_increment(1)

        Button:
            text: 'Down'
            on_press: app.handle_increment(-1)

        TextInput:
            id: input_miles
            text: '0'
            multiline: False
            input_filter: 'float'

    Button:
        text: 'Convert'
        size_hint_y: None
        height: 40
        on_press: app.handle_calculate()

    Label:
        id: output_label
        text: '0.0'
        color: (1, 1, 0, 1)

    Label:
        text: 'Enter a number of miles and press "Convert"'
        size_hint_y: None
        height: self.texture_size[1] + 10
